<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jungle.share.demo.MainActivity">

    <Button
        android:id="@+id/share_to_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_to_wx"/>

    <Button
        android:id="@+id/share_to_wx_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/share_to_wx_friends"/>

    <Button
        android:id="@+id/share_to_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/share_to_qq"/>

    <Button
        android:id="@+id/share_to_qzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/share_to_qzone"/>

    <Button
        android:id="@+id/share_to_wblog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/share_to_wblog"/>
</LinearLayout>
